<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="50dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.skytechhub.myaccounts.activities.Admin"
    tools:showIn="@layout/activity_admin">

    <LinearLayout
        android:id="@+id/ll"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <Button
            android:textSize="18dp"
            android:background="@drawable/btn_skytech"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Sky Tech Hub"
            android:id="@+id/btn_skytechhub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="18dp"
            android:id="@+id/btn_sawasdee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_skytours"
            android:gravity="center"
            android:text="Sawasdee Spa"
            android:textAllCaps="false" />

        <Button
            android:textSize="18dp"
            android:id="@+id/btn_skytours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_skytours"
            android:gravity="center"
            android:text="Sky Tours India Pvt Ltd"
            android:textAllCaps="false" />

        <Button
            android:textSize="18dp"
            android:background="@drawable/btn_skytours"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:text="Serenity Home"
            android:id="@+id/btn_serenity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_skytours"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Sanjeev Personal"
            android:id="@+id/btn_sanjeevpersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_emplist"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Employee List"
            android:id="@+id/btn_empList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/btn_admin_full_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_reports_admin"
            android:gravity="center"
            android:text="Reports"
            android:textAllCaps="false" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
</ScrollView>